generator client {
  provider = "prisma-client-js"
  //puede ser problema, quizas mas adelante al subir supabase
  //output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  fullname  String
  email     String   @unique
  password  String
  role      Role     @default(EMPLOYED)
  num_cel   String
  id_type   String
  num_id    String
  branch_id Int?
  branch    Branch?  @relation(fields: [branch_id], references: [id])
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Branch {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  users     User[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  EMPLOYED
}
